<div class="row generic-listing">
    <div class="page-info columns">
        {{ page_info }}
    </div>
    {% if form is not empty %}
        {# <button data-toggle="GenericFilter1">{% include "@du_bootstrap/misc/icon.twig" with {icon_class: "check"}%} Filter</button> #}
        <div class="filter-button-wrapper columns shrink" data-filter-id="{{ filter_id }}" aria-controls="{{ filter_id }}">
            {% include "@du_bootstrap/misc/filter-button.twig" %}
        </div>
        {% embed "@du_bootstrap/misc/listing-filters.twig" %}
            {% set filter_id = filter_id %}
            {% block filter_form %}
                {{ form }}
            {% endblock %}
        {% endembed %}
    {% else %}
        <div id="main-content" class="col-lg-8 offset-lg-4 pull-up page-title-band">
            <h1><span>
            {% if view_title is not empty %}
                {{ view_title | replace({'-': ' '}) | raw }}
            {% else %}
                Matching Articles
            {% endif %}
            </span></h1>
        </div>
    {% endif %}
    <div class="results-container {% if single_col %}one-col{% endif %}">
        {% block results %}
            {% for result_item in results %}
                <div class="results-item">
                    {% include "@du_bootstrap/misc/generic-teaser.twig" with result_item %}
                </div>
            {% endfor %}
        {% endblock %}
    </div>
    {% block pager %}
        {% include "@du_bootstrap/misc/pager.twig" %}
    {% endblock %}

</div>
