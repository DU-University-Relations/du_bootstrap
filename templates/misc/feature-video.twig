<div class="feature-video-module buffer-on-inner-row">
    {% if blockquote %}
        {% include "@du_bootstrap/misc/blockquote.twig" with blockquote %}
    {% endif %}
    <div class="row">
    	<div class="columns small-12 medium-12 large-8">
    		<div class="feature-video-module__video-wrapper">
                {% if is_youtube %}
                    {% embed "@du_bootstrap/misc/YouTube.twig" %}
                        {% block youtube_embed %}
                            {{ youtube_embed }}
                        {% endblock %}
                    {% endembed %}
                {% else %}
                    <a href="#" class="video-toggle show-for-large">
                        <span class="video-toggle__text">
                            <span class="visually-hidden">Play/Pause Video</span>
                            {% for icon in play_pause_icons %}
                                {% include "@du_bootstrap/misc/_du-icon.twig" with icon %}
                            {% endfor %}
                            {{ play_label }}
                        </span>
                    </a>
                    {% include "@du_bootstrap/misc/video.twig" with video_upload %}
                {% endif %}
        	</div>
    	</div>
    </div>
</div>
