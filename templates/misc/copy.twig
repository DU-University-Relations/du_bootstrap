<div class="copy-module{% if image and (not full) %} copy-module--image{% endif %}{% if alt and (not full) %} copy-module--image-alt{% endif %}">
    <div class="row w-100">
        <div class="col">
            <div class="row row-mw-120">
                {% if image and (content.field_copy_style|field_raw.value != 'full') and (image_placement == 'image-left' or content.field_copy_image_placement|render is empty) %}
                    <div class="col-12{% if not alt %} col-lg-6{% endif %}{% if alt %} col-lg-9{% endif %}">
                        {% if not alt %}
                            {{ copy_image }}
                        {% elseif alt %}
                            <div class="copy_image_narrow">
                                {{ copy_image_narrow }}
                            </div>
                        {% endif %}
                    </div>
                {% elseif image and (content.field_copy_style|field_raw.value != 'full') and (image_placement == 'image-right') %}
                    <div class="col-12{% if not alt %} col-lg-6 offset-lg-6{% endif %}{% if alt %} col-lg-9 offset-lg-3{% endif %} image-right">
                        {% if not alt %}
                            {{ copy_image }}
                        {% elseif alt %}
                            <div class="copy_image_narrow">
                                {{ copy_image_narrow }}
                            </div>
                        {% endif %}
                    </div>
                {% endif %}

                <div class="col-12
                    {% if (not image) and (not full) %} col-md-12 col-lg-8 offset-lg-4{% endif %}
                    {% if full %} col-md-12 col-lg-12 offset-lg-12{% endif %}
                    {% if image and (not full) %}
                        {% if not alt %} col-lg-6{% endif %}
                        {% if alt %} col-lg-3{% endif %}
                    {% endif %}">
                    <div class="content {% if image_placement %}{{ image_placement }}{% endif %}">
                        {% if header %}
                            <h3 class="btm-divider">{{ header|raw }}</h3>
                        {% endif %}
                        {% if subhead %}
                            <h4>{{ subhead|raw }}</h4>
                        {% endif %}
                        {% if body_text %}
                            {{ body_text }}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>