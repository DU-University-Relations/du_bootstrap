{% for type, messages in message_list %}
  {% set toast_class = {
    'status': 'bg-success text-white',
    'warning': 'bg-warning text-dark',
    'error': 'bg-danger text-white'
  }[type]|default('bg-secondary text-white') %}

  {% for message in messages %}
    <div class="toast align-items-center show mb-2" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="toast-header {{ toast_class }}">
        <strong class="me-auto text-capitalize">{{ type }}</strong>
        <button type="button" class="btn-close btn-close-white ms-2 mb-1" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
      <div class="toast-body">
        {{ message }}
      </div>
    </div>
  {% endfor %}
{% endfor %}