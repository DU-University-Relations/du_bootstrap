<div class="row columns du-news-list-content">
    {% if title %}
        <div class="row align-center">
            {% include "themes/custom/du_bootstrap/templates/navigation/headline.twig" with {'title' : title, 'type' : 'h3', 'cssClass': 'btm-divider'} %}
        </div>
    {% endif %}
    <div class="row">
        {% block du_news_list %}
            {% for item in rows %}
                {% include "themes/custom/du_bootstrap/templates/misc/du-in-the-news.twig" with item %}
            {% endfor %}
        {% endblock %}
    </div>
    {% if display == "block_1" %}
        <div class="row align-center">
            <div class="columns shrink">
                {% include "themes/custom/du_bootstrap/templates/misc/link.twig" with url %}
            </div>
        </div>
    {% endif %}
</div>
