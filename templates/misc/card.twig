<div class="col-12 col-lg-4">
    <div class="{% if card.card_type == 'icon' %}cards-module--has-icons{% endif %}">
        <div class="cards-module__content h-100 {{ card.plusMinusCss }}" >
            <div class="{% if card.card_type != 'icon' %}card-{% endif %}img-wrapper">
                {% if card.image %} {{ card.image }}  {% endif %}
            </div>
            {% include "themes/custom/du_bootstrap/templates/navigation/headline.twig" with card %}
            <div class="d-none d-md-block">
                {% block card_content %}
                    {% if card.text %}
                        {% include "themes/custom/du_bootstrap/templates/paragraph/paragraph.twig" with card %}
                    {% endif %}
                    {% if list_of_links %}
                        {% include "themes/custom/du_bootstrap/templates/misc/list.twig" with card %}
                    {% endif %}
                    {% if card.button.title %}
                        <p>{% include "themes/custom/du_bootstrap/templates/misc/button.twig" with card.button %}</p>
                    {% endif %}
                {% endblock %}
            </div>
        </div>
    </div>
</div>